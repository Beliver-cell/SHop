# Frontend Environment Variables
VITE_BACKEND_URL=http://localhost:8000

# Backend Environment Variables
PORT=8000
MONGODB_URI=your_mongodb_uri
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Payment Gateway (Flutterwave Only)
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key

# Email Configuration for Verification & Password Reset
# Option 1: Use Gmail/Standard SMTP
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Option 2: Use SendGrid (set both SENDGRID variables to enable)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@fantasyluxe.com

FRONTEND_URL=your-frontend-domain.com

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Admin Credentials
ADMIN_EMAIL=admin@fantasyluxe.com
ADMIN_PASSWORD=your_secure_password

# CORS Origins
CORS_ORIGIN=http://localhost:5000,http://localhost:5173,http://0.0.0.0:5000,http://0.0.0.0:5173

# Node Environment
NODE_ENV=development
